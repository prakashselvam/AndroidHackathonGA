<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bSearch2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ecf0f1"
    android:clickable="false"
    android:padding="30dp"
    android:orientation="vertical"
    android:gravity="top|center"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Where do you live?"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/PostCode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/spinner_drawable"
        android:hint="PostCode"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/HouseNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/spinner_drawable"
        android:hint="House Name/Number"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/Street"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/spinner_drawable"
        android:hint="Street"
        android:paddingLeft="10dp"/>
    <EditText
        android:id="@+id/PostTown"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/spinner_drawable"
        android:hint="Post Town"
        android:paddingLeft="10dp"/>
    <com.global.analytics.firstsampleapp.NiceSpinner
        android:id="@+id/county"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"/>
    <com.global.analytics.firstsampleapp.NiceSpinner
        android:id="@+id/timeataddress"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"/>
    <com.global.analytics.firstsampleapp.NiceSpinner
        android:id="@+id/typeofocupancy"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text= "Next"/>

</LinearLayout>