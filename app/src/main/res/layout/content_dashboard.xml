<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bSearch2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ecf0f1"
    android:clickable="false"
    android:orientation="vertical"
    android:gravity="top|center"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3a99d9"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/logo"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:textColor="@color/white"
            android:text="Lending"
            android:fontFamily="sans-serif-regular"
            />
        <TextView
            android:textColor="@color/white"
            android:textSize="21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stream"
            android:fontFamily="sans-serif-thin"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:background="@drawable/border_2"
            >
        <Button
            android:id="@+id/avatar_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="40dp"
            android:height="200dp"
            android:width="200dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/avatar_m"
            android:layout_width="120dp"
            android:layout_height="120dp"/>


            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingBottom="50dp"
            android:orientation="vertical">
            <TextView
                android:fontFamily="sans-serif-regular"
                android:id="@+id/user_name"
                android:gravity="left"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:text="Sanchit Mehta"/>
            <TextView
                android:fontFamily="sans-serif-thin"
                android:id="@+id/user_email"
                android:gravity="left"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sanchit.mehta@gmail.com"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/existing_application"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:padding="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-thin"
                android:text="Hey ! We see that you left your application incomplete last time."
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/app_progress_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/twenty"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-thin"
                            android:text="Amount : "
                            />
                        <TextView
                            android:id="@+id/cust_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-bold"
                            android:text="45$"
                            />
                    </LinearLayout>
                    <LinearLayout
                          android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-thin"
                            android:text="Started on "
                            />
                        <TextView
                            android:id="@+id/cust_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-bold"
                            android:text="12/08/2014"
                            />
                    </LinearLayout>
                 </LinearLayout>
                </LinearLayout>
            <Button
                android:layout_gravity="center"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:height="30dp"
                android:background="#3a99d9"
                android:alpha="0.8"
                android:layout_marginBottom="10dp"
                android:text= "I'll Complete My Application"
                android:onClick="start_application"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/new_application"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-thin"
                android:text="Hey ! You are eligible to apply for a Lending Stream loan."
                />
            <ImageView
                android:paddingTop="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/new_app"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"/>
            <Button
                android:layout_gravity="center"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:height="30dp"
                android:background="#3a99d9"
                android:alpha="0.8"
                android:text= "Start a New Loan Application"
                android:onClick="start_application"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>