<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bSearch2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ecf0f1"
    android:clickable="false"
    android:padding="30dp"
    android:orientation="vertical"
    android:gravity="top|center"
    android:layout_gravity="center">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top|center"
        android:layout_gravity="center"
        android:background="@drawable/border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:src="@drawable/avatar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="17dp"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="15dp"
                android:text="Tell Us About Yourself" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp">

        </LinearLayout>
        <com.global.analytics.firstsampleapp.NiceSpinner
            android:id="@+id/Title"
            android:textColor="@color/dark_grey"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/FirstName"
            android:textColor="@color/dark_grey"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/spinner_drawable"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="15dp"
            android:hint="First Name"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/LastName"
            android:textColor="@color/dark_grey"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="15dp"
            android:background="@drawable/spinner_drawable"
            android:hint="Last Name"
            android:paddingLeft="10dp"/>

        <com.global.analytics.firstsampleapp.NiceSpinner
            android:id="@+id/MaritalStatus"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <com.global.analytics.firstsampleapp.NiceSpinner
                android:id="@+id/birthDate"
                android:textColor="@color/dark_grey"
                android:fontFamily="sans-serif"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:textSize="15dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                />
            <com.global.analytics.firstsampleapp.NiceSpinner
                android:id="@+id/birthMonth"
                android:textColor="@color/dark_grey"
                android:fontFamily="sans-serif"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:textSize="15dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"/>
            <com.global.analytics.firstsampleapp.NiceSpinner
                android:id="@+id/birthYear"
                android:textColor="@color/dark_grey"
                android:fontFamily="sans-serif"
                android:layout_width="0dp"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_height="40dp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/emailid"
            android:layout_width="match_parent"
            android:fontFamily="sans-serif"
            android:textColor="@color/dark_grey"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="@drawable/spinner_drawable"
            android:hint="you@domain.com"
            android:textSize="15dp"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/mobileNumber"
            android:layout_width="match_parent"
            android:textColor="@color/dark_grey"
            android:fontFamily="sans-serif"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:background="@drawable/spinner_drawable"
            android:hint="Mobile Number"
            android:paddingLeft="10dp"/>

        <Button
            android:layout_gravity="center"
            android:id="@+id/next"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:height="30dp"
            android:background="#3a99d9"
            android:alpha="0.8"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:text= "Next"
            android:onClick="phasetwogo"/>
    </LinearLayout>
</LinearLayout>