<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bSearch2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ecf0f1"
    android:clickable="false"
    android:padding="30dp"
    android:orientation="vertical"
    android:gravity="top|center"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Where do you work?"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/EmployerName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/spinner_drawable"
        android:hint="Employer Name"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/EmployerPhoneName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/spinner_drawable"
        android:hint="Employer Phone Name"
        android:paddingLeft="10dp"/>
    <com.global.analytics.firstsampleapp.NiceSpinner
        android:id="@+id/IncomeSource"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"/>
    <com.global.analytics.firstsampleapp.NiceSpinner
        android:id="@+id/EmploymentLength"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/IncomeAmount"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/spinner_drawable"
            android:hint="Income Amount"
            android:paddingLeft="10dp"
            android:layout_marginRight="5dp"/>

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="40dp"
            android:textOn="Monthly"
            android:textOff="Weekly"
            android:checked="true" />
    </LinearLayout>
    <com.global.analytics.firstsampleapp.NiceSpinner
        android:id="@+id/HowOften"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text= "Next"/>

</LinearLayout>