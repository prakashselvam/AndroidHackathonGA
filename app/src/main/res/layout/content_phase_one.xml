<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bSearch2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ecf0f1"
    android:clickable="false"
    android:padding="30dp"
    android:orientation="vertical"
    android:gravity="top|center"
    android:layout_gravity="center">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/border">
        <TextView
            android:id="@+id/how_much_ques"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            android:textSize="17dp"
            android:text=" How much do you want to borrow? "/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/zero_plus"
            android:layout_marginTop="20dp"
            android:id="@+id/imageMoneyRepresentation"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:id="@+id/textboxloanamount"
            android:textSize="50dp"
            android:text="Â£ 100"/>
        <SeekBar
            android:layout_gravity="center"
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:progressDrawable="@drawable/styled_progress"
            android:thumb="@drawable/thumb"
            android:indeterminate="false" />
        <Button
            android:id="@+id/next"
            android:layout_gravity="center"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:height="30dp"
            android:background="#3a99d9"
            android:alpha="0.8"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:text= "@string/page_one_btn"
            android:onClick="phaseonego"/>
        </LinearLayout>
</LinearLayout>